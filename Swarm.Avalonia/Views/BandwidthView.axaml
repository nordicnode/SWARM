<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:Swarm.Avalonia.ViewModels"
             xmlns:lvc="using:LiveChartsCore.SkiaSharpView.Avalonia"
             mc:Ignorable="d" d:DesignWidth="900" d:DesignHeight="700"
             x:Class="Swarm.Avalonia.Views.BandwidthView"
             x:DataType="vm:BandwidthViewModel">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="250"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="Bandwidth"
                   FontSize="28"
                   FontWeight="SemiBold"
                   Foreground="{StaticResource TextPrimaryBrush}"
                   Margin="0,0,0,24"/>

        <!-- Stats Cards Row -->
        <Grid Grid.Row="1" ColumnDefinitions="*,*,*,*" Margin="0,0,0,24">
            
            <!-- Upload Speed Card -->
            <Border Grid.Column="0" Classes="stat-card" Margin="0,0,12,0">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="↑" FontSize="18" 
                                   Foreground="{StaticResource AccentPrimaryBrush}"
                                   FontWeight="Bold"/>
                        <TextBlock Text="Upload Speed"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   FontSize="12"/>
                    </StackPanel>
                    <TextBlock Text="{Binding CurrentUploadSpeed}"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="{StaticResource AccentPrimaryBrush}"
                               Margin="0,8,0,0"/>
                </StackPanel>
            </Border>

            <!-- Download Speed Card -->
            <Border Grid.Column="1" Classes="stat-card" Margin="6,0">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="↓" FontSize="18" 
                                   Foreground="{StaticResource AccentSecondaryBrush}"
                                   FontWeight="Bold"/>
                        <TextBlock Text="Download Speed"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   FontSize="12"/>
                    </StackPanel>
                    <TextBlock Text="{Binding CurrentDownloadSpeed}"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="{StaticResource AccentSecondaryBrush}"
                               Margin="0,8,0,0"/>
                </StackPanel>
            </Border>

            <!-- Session Upload Total -->
            <Border Grid.Column="2" Classes="stat-card" Margin="6,0">
                <StackPanel>
                    <TextBlock Text="Session Uploaded"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               FontSize="12"/>
                    <TextBlock Text="{Binding SessionUploadTotal}"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="{StaticResource TextPrimaryBrush}"
                               Margin="0,8,0,0"/>
                </StackPanel>
            </Border>

            <!-- Session Download Total -->
            <Border Grid.Column="3" Classes="stat-card" Margin="12,0,0,0">
                <StackPanel>
                    <TextBlock Text="Session Downloaded"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               FontSize="12"/>
                    <TextBlock Text="{Binding SessionDownloadTotal}"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="{StaticResource TextPrimaryBrush}"
                               Margin="0,8,0,0"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Speed Chart -->
        <Border Grid.Row="2" 
                Background="{StaticResource SurfaceBrush}"
                CornerRadius="12"
                BorderBrush="{StaticResource BorderLightBrush}"
                BorderThickness="1"
                Padding="16"
                Margin="0,0,0,24">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <StackPanel Orientation="Horizontal" Spacing="24" Margin="0,0,0,12">
                    <TextBlock Text="Transfer Speed (Last 60s)"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource TextPrimaryBrush}"/>
                    
                    <!-- Legend -->
                    <StackPanel Orientation="Horizontal" Spacing="16">
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <Border Width="12" Height="12" CornerRadius="2" Background="#2ed4bf"/>
                            <TextBlock Text="Upload" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <Border Width="12" Height="12" CornerRadius="2" Background="#06b6d4"/>
                            <TextBlock Text="Download" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
                
                <lvc:CartesianChart Grid.Row="1"
                                    Series="{Binding SpeedSeries}"
                                    XAxes="{Binding XAxes}"
                                    YAxes="{Binding YAxes}"
                                    AnimationsSpeed="00:00:00.300"
                                    TooltipPosition="Hidden"
                                    ZoomMode="None"/>
            </Grid>
        </Border>

        <!-- Bottom Section: Active Transfers + History -->
        <Grid Grid.Row="3" ColumnDefinitions="*,*">
            
            <!-- Active Transfers -->
            <Border Grid.Column="0"
                    Background="{StaticResource SurfaceBrush}"
                    CornerRadius="12"
                    BorderBrush="{StaticResource BorderLightBrush}"
                    BorderThickness="1"
                    Padding="16"
                    Margin="0,0,12,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Text="Active Transfers"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource TextPrimaryBrush}"
                               Margin="0,0,0,12"/>
                    
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding ActiveTransfers}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{StaticResource BackgroundLightBrush}"
                                            CornerRadius="6"
                                            Padding="12"
                                            Margin="0,0,0,8">
                                        <Grid RowDefinitions="Auto,Auto,Auto">
                                            <StackPanel Orientation="Horizontal" Spacing="8">
                                                <TextBlock Text="{Binding DirectionIcon}"
                                                           FontWeight="Bold"
                                                           Foreground="{StaticResource AccentPrimaryBrush}"/>
                                                <TextBlock Text="{Binding FileName}"
                                                           FontWeight="Medium"
                                                           Foreground="{StaticResource TextPrimaryBrush}"
                                                           TextTrimming="CharacterEllipsis"
                                                           MaxWidth="200"/>
                                            </StackPanel>
                                            
                                            <ProgressBar Grid.Row="1"
                                                         Value="{Binding Progress}"
                                                         Maximum="100"
                                                         Height="4"
                                                         CornerRadius="2"
                                                         Margin="0,8"/>
                                            
                                            <Grid Grid.Row="2" ColumnDefinitions="*,Auto">
                                                <TextBlock Text="{Binding PeerName}"
                                                           FontSize="11"
                                                           Foreground="{StaticResource TextMutedBrush}"/>
                                                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                                                    <TextBlock Text="{Binding Speed}"
                                                               FontSize="11"
                                                               Foreground="{StaticResource AccentPrimaryBrush}"/>
                                                    <TextBlock Text="{Binding ProgressText}"
                                                               FontSize="11"
                                                               Foreground="{StaticResource TextSecondaryBrush}"/>
                                                </StackPanel>
                                            </Grid>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                    
                    <!-- Empty state -->
                    <StackPanel Grid.Row="1"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                IsVisible="{Binding !HasActiveTransfers}">
                        <TextBlock Text="No active transfers"
                                   FontSize="13"
                                   Foreground="{StaticResource TextMutedBrush}"
                                   TextAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Transfer History -->
            <Border Grid.Column="1"
                    Background="{StaticResource SurfaceBrush}"
                    CornerRadius="12"
                    BorderBrush="{StaticResource BorderLightBrush}"
                    BorderThickness="1"
                    Padding="16"
                    Margin="12,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Text="Recent Transfers"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource TextPrimaryBrush}"
                               Margin="0,0,0,12"/>
                    
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding TransferHistory}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid ColumnDefinitions="Auto,*,Auto,Auto"
                                          Margin="0,0,0,12">
                                        <TextBlock Text="{Binding DirectionIcon}"
                                                   FontWeight="Bold"
                                                   Foreground="{StaticResource AccentPrimaryBrush}"
                                                   VerticalAlignment="Center"/>
                                        
                                        <StackPanel Grid.Column="1" Margin="12,0">
                                            <TextBlock Text="{Binding FileName}"
                                                       FontSize="13"
                                                       Foreground="{StaticResource TextPrimaryBrush}"
                                                       TextTrimming="CharacterEllipsis"/>
                                            <TextBlock FontSize="11"
                                                       Foreground="{StaticResource TextMutedBrush}">
                                                <Run Text="{Binding PeerName}"/>
                                                <Run Text="•"/>
                                                <Run Text="{Binding TimeAgo}"/>
                                            </TextBlock>
                                        </StackPanel>
                                        
                                        <TextBlock Grid.Column="2"
                                                   Text="{Binding FileSize}"
                                                   FontSize="12"
                                                   Foreground="{StaticResource TextSecondaryBrush}"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,16,0"/>
                                        
                                        <TextBlock Grid.Column="3"
                                                   Text="{Binding AverageSpeed}"
                                                   FontSize="12"
                                                   Foreground="{StaticResource AccentPrimaryBrush}"
                                                   VerticalAlignment="Center"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                    
                    <!-- Empty state -->
                    <StackPanel Grid.Row="1"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                IsVisible="{Binding !HasTransferHistory}">
                        <TextBlock Text="No transfer history"
                                   FontSize="13"
                                   Foreground="{StaticResource TextMutedBrush}"
                                   TextAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>

    <UserControl.Styles>
        <Style Selector="Border.stat-card">
            <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderLightBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </UserControl.Styles>
</UserControl>
