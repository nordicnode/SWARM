<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:Swarm.Avalonia.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Swarm.Avalonia.Views.PeersView"
             x:DataType="vm:PeersViewModel">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Peers"
                   FontSize="28"
                   FontWeight="SemiBold"
                   Foreground="{StaticResource TextPrimaryBrush}"
                   Margin="0,0,0,24"/>

        <!-- Peers List -->
        <Border Grid.Row="1"
                Background="{StaticResource SurfaceBrush}"
                CornerRadius="8"
                BorderBrush="#10FFFFFF"
                BorderThickness="1">
            <ListBox ItemsSource="{Binding Peers}"
                     SelectedItem="{Binding SelectedPeer}"
                     Background="Transparent">
                <ListBox.Styles>
                    <Style Selector="ListBoxItem">
                        <Setter Property="Padding" Value="12,16"/>
                        <Setter Property="CornerRadius" Value="4"/>
                        <Setter Property="Margin" Value="4,2"/>
                    </Style>
                </ListBox.Styles>
                
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid ColumnDefinitions="Auto,*,Auto">
                            <!-- Avatar -->
                            <Border Width="40" Height="40"
                                    CornerRadius="20"
                                    Background="#20FFFFFF">
                                <TextBlock Text="{Binding Name[0]}"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center"
                                           FontSize="18"
                                           FontWeight="Bold"
                                           Foreground="{StaticResource AccentPrimaryBrush}"/>
                            </Border>

                            <!-- Details -->
                            <StackPanel Grid.Column="1" Margin="16,0,0,0" VerticalAlignment="Center">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <TextBlock Text="{Binding Name}" 
                                               FontSize="16"
                                               Foreground="{StaticResource TextPrimaryBrush}"
                                               FontWeight="SemiBold"/>
                                    <Border IsVisible="{Binding IsTrusted}"
                                            Background="#204CAF50"
                                            CornerRadius="4"
                                            Padding="6,2">
                                        <TextBlock Text="Trusted"
                                                   FontSize="10"
                                                   Foreground="{StaticResource StatusOnlineBrush}"/>
                                    </Border>
                                </StackPanel>
                                <TextBlock Text="{Binding IpAddress}"
                                           FontSize="12"
                                           Foreground="{StaticResource TextMutedBrush}"
                                           Margin="0,4,0,0"/>
                            </StackPanel>

                            <!-- Status -->
                            <Grid Grid.Column="2" VerticalAlignment="Center" Margin="0,0,16,0">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <Ellipse Width="8" Height="8"
                                             Fill="{StaticResource StatusOnlineBrush}"
                                             IsVisible="{Binding IsOnline}"/>
                                    <TextBlock Text="Online"
                                               IsVisible="{Binding IsOnline}"
                                               Foreground="{StaticResource TextSecondaryBrush}"/>
                                </StackPanel>
                            </Grid>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Border>
    </Grid>
</UserControl>
