<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Colors -->
    <Style>
        <Style.Resources>
            <!-- Backgrounds -->
            <SolidColorBrush x:Key="BackgroundDarkBrush" Color="#0f0f12"/>
            <SolidColorBrush x:Key="SurfaceBrush" Color="#1E1E24"/>
            <SolidColorBrush x:Key="OverlayBrush" Color="#000000" Opacity="0.5"/>

            <!-- Text -->
            <SolidColorBrush x:Key="TextPrimaryBrush" Color="#FFFFFF"/>
            <SolidColorBrush x:Key="TextSecondaryBrush" Color="#A0A0A0"/>
            <SolidColorBrush x:Key="TextMutedBrush" Color="#606060"/>
            <SolidColorBrush x:Key="TextDisabledBrush" Color="#404040"/>

            <!-- Accents -->
            <SolidColorBrush x:Key="AccentPrimaryBrush" Color="#5C6BC0"/>
            <SolidColorBrush x:Key="AccentSecondaryBrush" Color="#26A69A"/>
            <SolidColorBrush x:Key="AccentDestructiveBrush" Color="#EF5350"/>
            <SolidColorBrush x:Key="GlowBrush" Color="#304FFE"/>

            <!-- Status -->
            <SolidColorBrush x:Key="StatusOnlineBrush" Color="#66BB6A"/>
            <SolidColorBrush x:Key="StatusBusyBrush" Color="#FFA726"/>
            <SolidColorBrush x:Key="StatusErrorBrush" Color="#EF5350"/>
        </Style.Resources>
    </Style>
</Styles>
