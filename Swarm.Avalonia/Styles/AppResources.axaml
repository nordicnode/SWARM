<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- 
        AppResources.axaml - Additional resources that complement Theme.axaml
        Provides missing brush definitions needed by views
    -->
    <Style>
        <Style.Resources>
            <!-- Surface/Card Backgrounds (for glass effect cards) -->
            <SolidColorBrush x:Key="SurfaceBrush" Color="#1a1a1f"/>
            <SolidColorBrush x:Key="SurfaceVariantBrush" Color="#22222a"/>
            <SolidColorBrush x:Key="OverlayBrush" Color="#80000000"/>
            
            <!-- Additional Text Brushes -->
            <SolidColorBrush x:Key="TextDisabledBrush" Color="#4a4a52"/>
            
            <!-- Card Accent Borders (for visual polish) -->
            <LinearGradientBrush x:Key="CardBorderGradient" StartPoint="0%,0%" EndPoint="100%,100%">
                <GradientStop Color="#20ffffff" Offset="0"/>
                <GradientStop Color="#08ffffff" Offset="1"/>
            </LinearGradientBrush>
            
            <!-- Premium Glow Effect -->
            <RadialGradientBrush x:Key="PremiumGlowBrush" Center="50%,50%" GradientOrigin="50%,50%">
                <GradientStop Color="#152dd4bf" Offset="0"/>
                <GradientStop Color="#00000000" Offset="1"/>
            </RadialGradientBrush>
        </Style.Resources>
    </Style>
</Styles>
