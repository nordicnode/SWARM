<Window x:Class="Swarm.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Swarm" 
        Height="700" Width="1100"
        MinHeight="500" MinWidth="800"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Drag indicator animation -->
        <Storyboard x:Key="DragEnterAnimation">
            <ColorAnimation Storyboard.TargetName="DropZoneBorder"
                           Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)"
                           To="#00D4AA" Duration="0:0:0.2"/>
        </Storyboard>
        <Storyboard x:Key="DragLeaveAnimation">
            <ColorAnimation Storyboard.TargetName="DropZoneBorder"
                           Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)"
                           To="#30FFFFFF" Duration="0:0:0.2"/>
        </Storyboard>
        
        <!-- Pulse animation for radar -->
        <Storyboard x:Key="RadarPulseAnimation" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="RadarPulse1"
                            Storyboard.TargetProperty="Opacity"
                            From="0.6" To="0" Duration="0:0:2"/>
            <DoubleAnimation Storyboard.TargetName="RadarPulse1"
                            Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                            From="0.3" To="1" Duration="0:0:2"/>
            <DoubleAnimation Storyboard.TargetName="RadarPulse1"
                            Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                            From="0.3" To="1" Duration="0:0:2"/>
        </Storyboard>
    </Window.Resources>

    <Border Background="{StaticResource BackgroundDarkBrush}" CornerRadius="12" BorderBrush="#30FFFFFF" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="48"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- ========== TITLE BAR ========== -->
            <Border Grid.Row="0" Background="{StaticResource BackgroundMediumBrush}" 
                    CornerRadius="12,12,0,0" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="16,0">
                        <!-- Logo/Icon -->
                        <Ellipse Width="24" Height="24" Fill="{StaticResource AccentGradientBrush}"/>
                        <TextBlock Text="SWARM" FontWeight="Bold" FontSize="16" 
                                   Foreground="{StaticResource TextPrimaryBrush}" 
                                   VerticalAlignment="Center" Margin="12,0,0,0"/>
                        <TextBlock x:Name="StatusText" Text="Scanning for peers..." 
                                   Foreground="{StaticResource TextSecondaryBrush}" 
                                   FontSize="12" VerticalAlignment="Center" Margin="16,0,0,0"/>
                    </StackPanel>

                    <!-- Window Controls -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,8,0">
                        <!-- Settings Button -->
                        <Button Width="40" Height="32" 
                                Style="{StaticResource SecondaryButtonStyle}"
                                Padding="0" BorderThickness="0"
                                Click="SettingsButton_Click"
                                ToolTip="Settings">
                            <Path Data="M19.14,12.94c0.04-0.3,0.06-0.61,0.06-0.94c0-0.32-0.02-0.64-0.07-0.94l2.03-1.58c0.18-0.14,0.23-0.41,0.12-0.61 l-1.92-3.32c-0.12-0.22-0.37-0.29-0.59-0.22l-2.39,0.96c-0.5-0.38-1.03-0.7-1.62-0.94L14.4,2.81c-0.04-0.24-0.24-0.41-0.48-0.41 h-3.84c-0.24,0-0.43,0.17-0.47,0.41L9.25,5.35C8.66,5.59,8.12,5.92,7.63,6.29L5.24,5.33c-0.22-0.08-0.47,0-0.59,0.22L2.74,8.87 C2.62,9.08,2.66,9.34,2.86,9.48l2.03,1.58C4.84,11.36,4.8,11.69,4.8,12s0.02,0.64,0.07,0.94l-2.03,1.58 c-0.18,0.14-0.23,0.41-0.12,0.61l1.92,3.32c0.12,0.22,0.37,0.29,0.59,0.22l2.39-0.96c0.5,0.38,1.03,0.7,1.62,0.94l0.36,2.54 c0.05,0.24,0.24,0.41,0.48,0.41h3.84c0.24,0,0.44-0.17,0.47-0.41l0.36-2.54c0.59-0.24,1.13-0.56,1.62-0.94l2.39,0.96 c0.22,0.08,0.47,0,0.59-0.22l1.92-3.32c0.12-0.22,0.07-0.47-0.12-0.61L19.14,12.94z M12,15.6c-1.98,0-3.6-1.62-3.6-3.6 s1.62-3.6,3.6-3.6s3.6,1.62,3.6,3.6S13.98,15.6,12,15.6z"
                                  Width="16" Height="16" 
                                  Stretch="Uniform"
                                  Fill="{StaticResource TextSecondaryBrush}"/>
                        </Button>
                        <Button Content="─" Width="40" Height="32" 
                                Style="{StaticResource SecondaryButtonStyle}"
                                Padding="0" BorderThickness="0"
                                Click="MinimizeButton_Click"/>
                        <Button Content="□" Width="40" Height="32" 
                                Style="{StaticResource SecondaryButtonStyle}"
                                Padding="0" BorderThickness="0"
                                Click="MaximizeButton_Click"/>
                        <Button Content="✕" Width="40" Height="32" 
                                Foreground="#F85149"
                                Background="Transparent" BorderThickness="0"
                                Padding="0" Cursor="Hand"
                                Click="CloseButton_Click"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- ========== MAIN CONTENT ========== -->
            <Grid Grid.Row="1" Margin="24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300"/>
                    <ColumnDefinition Width="24"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- ========== LEFT COLUMN: PEERS + SYNC ========== -->
                <StackPanel Grid.Column="0">
                
                <!-- ========== PEERS PANEL ========== -->
                <Border Style="{StaticResource CardBorderStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="16"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Header -->
                        <StackPanel Grid.Row="0">
                            <Grid>
                                <TextBlock Text="Nearby Devices" FontSize="18" FontWeight="SemiBold" 
                                           Foreground="{StaticResource TextPrimaryBrush}"/>
                                <!-- Radar Animation -->
                                <Grid HorizontalAlignment="Right" Width="20" Height="20">
                                    <Ellipse x:Name="RadarPulse1" 
                                             Width="20" Height="20"
                                             Stroke="{StaticResource AccentPrimaryBrush}"
                                             StrokeThickness="2"
                                             Opacity="0"
                                             RenderTransformOrigin="0.5,0.5">
                                        <Ellipse.RenderTransform>
                                            <ScaleTransform ScaleX="0.3" ScaleY="0.3"/>
                                        </Ellipse.RenderTransform>
                                    </Ellipse>
                                    <Ellipse Width="8" Height="8" Fill="{StaticResource AccentPrimaryBrush}"/>
                                </Grid>
                            </Grid>
                            <TextBlock x:Name="PeerCountText" Text="0 devices found" 
                                       FontSize="12" Foreground="{StaticResource TextSecondaryBrush}" 
                                       Margin="0,4,0,0"/>
                        </StackPanel>

                        <!-- Peer List -->
                        <ListBox x:Name="PeerListBox" Grid.Row="2" 
                                 Style="{StaticResource PeerListBoxStyle}"
                                 ItemContainerStyle="{StaticResource PeerListBoxItemStyle}"
                                 SelectionChanged="PeerListBox_SelectionChanged">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Status indicator -->
                                        <Ellipse Width="10" Height="10" 
                                                 Fill="{StaticResource StatusOnlineBrush}"
                                                 VerticalAlignment="Center"/>

                                        <!-- Peer info -->
                                        <StackPanel Grid.Column="1" Margin="12,0,0,0">
                                            <TextBlock Text="{Binding Name}" 
                                                       FontWeight="SemiBold" FontSize="14"
                                                       Foreground="{StaticResource TextPrimaryBrush}"/>
                                            <TextBlock Text="{Binding IpAddress}" 
                                                       FontSize="12"
                                                       Foreground="{StaticResource TextSecondaryBrush}"/>
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>

                        <StackPanel x:Name="EmptyPeersPanel" Grid.Row="2" 
                                    VerticalAlignment="Center" HorizontalAlignment="Center">
                            <!-- Vector search icon -->
                            <Path Data="M15.5 14h-.79l-.28-.27A6.471 6.471 0 0 0 16 9.5 6.5 6.5 0 1 0 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z"
                                  Width="48" Height="48" 
                                  Stretch="Uniform"
                                  Fill="{StaticResource TextSecondaryBrush}"
                                  HorizontalAlignment="Center"/>
                            <TextBlock Text="Looking for devices..." 
                                       Foreground="{StaticResource TextMutedBrush}"
                                       FontSize="14" HorizontalAlignment="Center" Margin="0,12,0,0"/>
                            <TextBlock Text="Make sure other devices are running Swarm"
                                       Foreground="{StaticResource TextMutedBrush}"
                                       FontSize="12" HorizontalAlignment="Center" Opacity="0.7"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- ========== SYNC FOLDER PANEL ========== -->
                <Border Style="{StaticResource CardBorderStyle}" Margin="0,16,0,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="12"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="12"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Header -->
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel>
                                <TextBlock Text="Synced Folder" FontSize="16" FontWeight="SemiBold" 
                                           Foreground="{StaticResource TextPrimaryBrush}"/>
                                <TextBlock x:Name="SyncStatusText" Text="Sync enabled" 
                                           FontSize="12" Foreground="{StaticResource TextSecondaryBrush}" 
                                           Margin="0,4,0,0"/>
                                <ProgressBar x:Name="SyncProgressBar" 
                                             Style="{StaticResource TransferProgressBarStyle}" 
                                             Height="4" Margin="0,8,0,0"
                                             Visibility="Collapsed"/>
                            </StackPanel>
                            
                            <!-- Sync indicator -->
                            <Ellipse x:Name="SyncIndicator" Grid.Column="1" 
                                     Width="12" Height="12" 
                                     Fill="{StaticResource StatusOnlineBrush}"
                                     VerticalAlignment="Center"/>
                        </Grid>

                        <!-- Folder Path -->
                        <Border Grid.Row="2" Background="#10FFFFFF" CornerRadius="6" Padding="12,8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <!-- Folder icon and path -->
                                <StackPanel Orientation="Horizontal">
                                    <Path Data="M10 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V8c0-1.1-.9-2-2-2h-8l-2-2z"
                                          Width="16" Height="16" 
                                          Stretch="Uniform"
                                          Fill="{StaticResource AccentPrimaryBrush}"
                                          VerticalAlignment="Center"/>
                                    <TextBlock x:Name="SyncFolderPathText" 
                                               Text="Documents\SWARM\Synced" 
                                               FontSize="12"
                                               Foreground="{StaticResource TextSecondaryBrush}"
                                               VerticalAlignment="Center" Margin="8,0,0,0"
                                               TextTrimming="CharacterEllipsis"
                                               MaxWidth="160"/>
                                </StackPanel>
                                
                                <!-- Change folder button -->
                                <Button Grid.Column="1" Content="Change" 
                                        Style="{StaticResource SecondaryButtonStyle}"
                                        Padding="8,4" FontSize="11"
                                        Click="ChangeSyncFolder_Click"/>
                            </Grid>
                        </Border>

                        <!-- Action buttons -->
                        <StackPanel Grid.Row="4" Orientation="Horizontal">
                            <Button x:Name="SyncToggleButton" Content="Disable Sync" 
                                    Style="{StaticResource SecondaryButtonStyle}"
                                    Padding="12,6" FontSize="12"
                                    Click="SyncToggle_Click"/>
                            <Button Content="Open Folder" 
                                    Style="{StaticResource SecondaryButtonStyle}"
                                    Padding="12,6" FontSize="12" Margin="8,0,0,0"
                                    Click="OpenSyncFolder_Click"/>
                        </StackPanel>
                    </Grid>
                </Border>
                
                </StackPanel>

                <!-- ========== RIGHT PANEL: DROP ZONE & TRANSFERS ========== -->
                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="24"/>
                        <RowDefinition Height="Auto" MinHeight="200"/>
                    </Grid.RowDefinitions>

                    <!-- Drop Zone -->
                    <Border x:Name="DropZoneBorder" Grid.Row="0" 
                            Style="{StaticResource CardBorderStyle}"
                            AllowDrop="True"
                            DragEnter="DropZone_DragEnter"
                            DragLeave="DropZone_DragLeave"
                            Drop="DropZone_Drop"
                            BorderBrush="#30FFFFFF"
                            BorderThickness="2">
                        <Grid>
                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                <!-- Vector folder icon -->
                                <Path x:Name="DropZoneIcon" 
                                      Data="M10 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V8c0-1.1-.9-2-2-2h-8l-2-2z"
                                      Width="64" Height="64" 
                                      Stretch="Uniform"
                                      Fill="{StaticResource AccentPrimaryBrush}"
                                      HorizontalAlignment="Center"/>
                                <TextBlock x:Name="DropZoneTitle" Text="Drop files here to send" 
                                           FontSize="20" FontWeight="SemiBold"
                                           Foreground="{StaticResource TextPrimaryBrush}"
                                           HorizontalAlignment="Center" Margin="0,16,0,0"/>
                                <TextBlock x:Name="DropZoneSubtitle" Text="or click to browse" 
                                           FontSize="14"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           HorizontalAlignment="Center" Margin="0,8,0,0"/>
                                <TextBlock x:Name="SelectedPeerText" Text="" 
                                           FontSize="12"
                                           Foreground="{StaticResource AccentPrimaryBrush}"
                                           HorizontalAlignment="Center" Margin="0,16,0,0"/>
                            </StackPanel>

                            <!-- Browse Button -->
                            <Button Content="Browse Files" 
                                    Style="{StaticResource PrimaryButtonStyle}"
                                    VerticalAlignment="Bottom" HorizontalAlignment="Center"
                                    Margin="0,0,0,24"
                                    Click="BrowseButton_Click"/>
                        </Grid>
                    </Border>

                    <!-- Transfers List -->
                    <Border Grid.Row="2" Style="{StaticResource CardBorderStyle}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="12"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="Transfers" FontSize="16" FontWeight="SemiBold"
                                       Foreground="{StaticResource TextPrimaryBrush}"/>

                            <ListBox x:Name="TransfersListBox" Grid.Row="2"
                                     Style="{StaticResource PeerListBoxStyle}"
                                     ItemContainerStyle="{StaticResource PeerListBoxItemStyle}">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="8"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Text="{Binding FileName}" 
                                                       FontWeight="SemiBold"
                                                       Foreground="{StaticResource TextPrimaryBrush}"
                                                       TextTrimming="CharacterEllipsis"/>
                                            <TextBlock Grid.Column="1" Text="{Binding SpeedDisplay}"
                                                       Foreground="{StaticResource TextSecondaryBrush}"
                                                       FontSize="12"/>

                                            <ProgressBar Grid.Row="2" Grid.ColumnSpan="2"
                                                        Value="{Binding Progress}"
                                                        Style="{StaticResource TransferProgressBarStyle}"/>
                                        </Grid>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>

                            <!-- Empty transfers state -->
                            <TextBlock x:Name="EmptyTransfersText" Grid.Row="2"
                                       Text="No active transfers"
                                       Foreground="{StaticResource TextMutedBrush}"
                                       FontSize="13" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Window>
