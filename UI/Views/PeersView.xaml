<UserControl x:Class="Swarm.UI.Views.PeersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Swarm.UI.Views"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </UserControl.Resources>
    
    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="24">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MinWidth="320" MaxWidth="400"/>
                <ColumnDefinition Width="24"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Column: Peer List -->
            <Border Grid.Column="0" Background="#10ffffff" CornerRadius="12" Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Nearby Devices" FontSize="20" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}"/>
                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                            <Ellipse Width="8" Height="8" Fill="{StaticResource AccentPrimaryBrush}" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock Text="{Binding StatusText}" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Peer List -->
                    <Grid Grid.Row="1">
                        <!-- Empty State -->
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center"
                                    Visibility="{Binding HasNoPeers, Converter={StaticResource BoolToVis}}">
                            <Border Width="64" Height="64" CornerRadius="32" Background="#15ffffff" Margin="0,0,0,16">
                                <TextBlock Text="ðŸ“¡" FontSize="28" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Looking for devices..." 
                                       Foreground="{StaticResource TextSecondaryBrush}" 
                                       FontSize="14" 
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="Make sure other devices are on the same network" 
                                       Foreground="{StaticResource TextMutedBrush}" 
                                       FontSize="12" 
                                       HorizontalAlignment="Center"
                                       TextWrapping="Wrap"
                                       TextAlignment="Center"
                                       Margin="0,8,0,0"
                                       MaxWidth="200"/>
                        </StackPanel>
                        
                        <!-- Actual Peer List -->
                        <ListBox ItemsSource="{Binding Peers}" 
                                 SelectedItem="{Binding SelectedPeer}"
                                 Background="Transparent" BorderThickness="0"
                                 ItemContainerStyle="{StaticResource PeerListBoxItemStyle}">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,4">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <!-- Device Icon with Status -->
                                        <Border Width="40" Height="40" CornerRadius="8" Background="#15ffffff" Margin="0,0,12,0">
                                            <Grid>
                                                <TextBlock Text="ðŸ’»" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                <Ellipse Width="10" Height="10" Fill="{StaticResource StatusOnlineBrush}" 
                                                         HorizontalAlignment="Right" VerticalAlignment="Bottom"
                                                         Margin="0,0,-2,-2"
                                                         Stroke="{StaticResource BackgroundDarkBrush}" StrokeThickness="2"/>
                                            </Grid>
                                        </Border>
                                        
                                        <!-- Device Info -->
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Name}" FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}" FontSize="14"/>
                                            <TextBlock Text="{Binding IpAddress}" FontSize="11" Foreground="{StaticResource TextMutedBrush}" Margin="0,2,0,0"/>
                                        </StackPanel>
                                        
                                        <!-- Trust Badge -->
                                        <Border Grid.Column="2" Background="#152dd4bf" CornerRadius="4" Padding="6,3" VerticalAlignment="Center"
                                                Visibility="{Binding IsTrusted, Converter={StaticResource BoolToVis}}">
                                            <TextBlock Text="Trusted" FontSize="10" Foreground="{StaticResource AccentPrimaryBrush}"/>
                                        </Border>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
                </Grid>
            </Border>

            <!-- Right Column: Send Zone -->
            <Border Grid.Column="2" Background="#08ffffff" CornerRadius="16">
                <Grid>
                    <!-- Drop Zone -->
                    <Border x:Name="DropZone" 
                            Background="Transparent" 
                            BorderBrush="{StaticResource AccentPrimaryBrush}" 
                            BorderThickness="2" 
                            CornerRadius="16" 
                            Margin="20"
                            AllowDrop="True"
                            Drop="DropZone_Drop"
                            DragEnter="DropZone_DragEnter"
                            DragLeave="DropZone_DragLeave">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Opacity" Value="0.5"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Opacity" Value="1.0"/>
                                        <Setter Property="Background" Value="#08ffffff"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <!-- Upload Icon -->
                            <Border Width="80" Height="80" CornerRadius="40" Background="#152dd4bf" Margin="0,0,0,24">
                                <Path Data="M9 16h6v-6h4l-7-7-7 7h4v6zm-4 2h14v2H5v-2z" 
                                      Width="32" Height="32" Stretch="Uniform" 
                                      Fill="{StaticResource AccentPrimaryBrush}"
                                      HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            
                            <TextBlock Text="Send Files" FontSize="28" FontWeight="Bold" 
                                       Foreground="{StaticResource TextPrimaryBrush}" HorizontalAlignment="Center"/>
                            <TextBlock Text="Drag and drop files here to send" 
                                       Foreground="{StaticResource TextSecondaryBrush}" FontSize="14" 
                                       HorizontalAlignment="Center" Margin="0,8,0,0"/>
                            
                            <!-- Or Divider -->
                            <Grid Margin="0,24,0,24" Width="200">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Border Height="1" Background="#30ffffff" VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="1" Text="or" Foreground="{StaticResource TextMutedBrush}" FontSize="12" Margin="12,0"/>
                                <Border Grid.Column="2" Height="1" Background="#30ffffff" VerticalAlignment="Center"/>
                            </Grid>
                            
                            <Button Content="Browse Files" 
                                    Command="{Binding SendFilesCommand}"
                                    Style="{StaticResource PrimaryButtonStyle}" 
                                    Padding="40,14"
                                    FontSize="14"/>
                            
                            <!-- Selected Peer Info -->
                            <Border Background="#10ffffff" CornerRadius="8" Padding="16,10" Margin="0,32,0,0"
                                    Visibility="{Binding HasSelectedPeer, Converter={StaticResource BoolToVis}}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Sending to: " Foreground="{StaticResource TextMutedBrush}" FontSize="12"/>
                                    <TextBlock Text="{Binding SelectedPeer.Name}" Foreground="{StaticResource AccentPrimaryBrush}" FontSize="12" FontWeight="SemiBold"/>
                                </StackPanel>
                            </Border>
                            
                            <!-- Device ID -->
                            <TextBlock Text="{Binding LocalId, StringFormat='Your Device ID: {0}'}" 
                                       Foreground="{StaticResource TextMutedBrush}" 
                                       FontSize="11" 
                                       HorizontalAlignment="Center" 
                                       Margin="0,24,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </ScrollViewer>
</UserControl>
