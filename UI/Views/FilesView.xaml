<UserControl x:Class="Swarm.UI.Views.FilesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Swarm.UI.Views"
             xmlns:vm="clr-namespace:Swarm.ViewModels"
             xmlns:conv="clr-namespace:Swarm.UI.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <UserControl.Resources>
        <conv:BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <conv:InverseBooleanToVisibilityConverter x:Key="InverseBoolToVis"/>
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Header & Search -->
            <RowDefinition Height="*"/>    <!-- File List -->
            <RowDefinition Height="Auto"/> <!-- Status Bar -->
        </Grid.RowDefinitions>

        <!-- Header Area -->
        <StackPanel Grid.Row="0" Margin="24,24,24,16">
            <!-- Title and Sync Status -->
            <Grid Margin="0,0,0,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Text="My Files" FontSize="24" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}"/>
                
                <!-- Sync Status Badge -->
                <Border Grid.Column="1" Background="#152dd4bf" CornerRadius="6" Padding="12,6" VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal">
                        <Ellipse Width="8" Height="8" Fill="{StaticResource StatusOnlineBrush}" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock Text="{Binding SyncStatusText}" Foreground="{StaticResource TextPrimaryBrush}" FontSize="12" FontWeight="Medium"/>
                    </StackPanel>
                </Border>
            </Grid>
            
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/> <!-- Back Button -->
                    <ColumnDefinition Width="*"/>    <!-- Path -->
                    <ColumnDefinition Width="Auto"/> <!-- Search -->
                    <ColumnDefinition Width="Auto"/> <!-- Filter -->
                    <ColumnDefinition Width="Auto"/> <!-- Sort -->
                    <ColumnDefinition Width="Auto"/> <!-- Open Explorer -->
                </Grid.ColumnDefinitions>

                <!-- Navigation -->
                <Button Grid.Column="0" Content="â†‘" Command="{Binding NavigateUpCommand}" 
                        Style="{StaticResource SecondaryButtonStyle}" Width="32" Height="32" Padding="0" Margin="0,0,8,0"
                        ToolTip="Up one level"/>

                <TextBox Grid.Column="1" Text="{Binding CurrentPathDisplay, Mode=OneWay}" IsReadOnly="True"
                         Style="{StaticResource SettingsTextBoxStyle}" VerticalAlignment="Center" Margin="0,0,16,0"
                         Foreground="{StaticResource TextMutedBrush}"/>

                <!-- Search -->
                <Grid Grid.Column="2" Width="200" Margin="0,0,8,0">
                    <TextBox Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}" 
                             Style="{StaticResource SettingsTextBoxStyle}" Padding="30,6,10,6"
                             Tag="Search files..."/>
                    <TextBlock Text="ðŸ”" Foreground="{StaticResource TextMutedBrush}" 
                               VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,0,0,0" IsHitTestVisible="False"/>
                </Grid>

                <!-- Filter -->
                <ComboBox Grid.Column="3" Text="{Binding CurrentFilter, Mode=TwoWay}" Width="120" Margin="0,0,8,0"
                          Style="{StaticResource SettingsComboBoxStyle}" IsEditable="False" SelectedIndex="0">
                    <ComboBoxItem Content="All Files"/>
                    <ComboBoxItem Content="Documents"/>
                    <ComboBoxItem Content="Images"/>
                    <ComboBoxItem Content="Videos"/>
                    <ComboBoxItem Content="Audio"/>
                    <ComboBoxItem Content="Archives"/>
                    <ComboBoxItem Content="Other"/>
                </ComboBox>

                <!-- Sort -->
                <Button Grid.Column="4" Content="{Binding SortPropertyDisplay}" Command="{Binding ToggleSortCommand}"
                        Style="{StaticResource SecondaryButtonStyle}" Margin="0,0,8,0" MinWidth="80"/>
                
                <!-- Actions -->
                <Button Grid.Column="5" Content="ðŸ“‚" Command="{Binding OpenInExplorerCommand}"
                        Style="{StaticResource SecondaryButtonStyle}" Width="32" Height="32" Padding="0"
                        ToolTip="Open in Explorer"/>
            </Grid>
        </StackPanel>

        <!-- File List -->
        <Grid Grid.Row="1" Margin="24,0,24,0">
            <ListBox ItemsSource="{Binding Files}" 
                     Background="Transparent" BorderThickness="0"
                     HorizontalContentAlignment="Stretch"
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem" BasedOn="{StaticResource PeerListBoxItemStyle}">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="Padding" Value="8"/>
                        <Setter Property="ContextMenu">
                            <Setter.Value>
                                <ContextMenu>
                                    <MenuItem Header="Open" Command="{Binding DataContext.OpenItemCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding}"/>
                                    <MenuItem Header="Create Share Link" Command="{Binding DataContext.CreateShareLinkCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding}"/>
                                    <Separator/>
                                    <MenuItem Header="Show in Explorer" Command="{Binding DataContext.OpenInExplorerCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                                </ContextMenu>
                            </Setter.Value>
                        </Setter>
                        <EventSetter Event="MouseDoubleClick" Handler="ListBoxItem_MouseDoubleClick"/>
                    </Style>
                </ListBox.ItemContainerStyle>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/> <!-- Icon -->
                                <ColumnDefinition Width="*"/>    <!-- Name -->
                                <ColumnDefinition Width="100"/> <!-- Size -->
                                <ColumnDefinition Width="120"/> <!-- Date -->
                                <ColumnDefinition Width="Auto"/> <!-- Actions -->
                            </Grid.ColumnDefinitions>

                            <!-- Icon -->
                            <Border Width="32" Height="32" CornerRadius="6" Background="#10ffffff" Margin="0,0,12,0">
                                <TextBlock Text="{Binding IconText}" Foreground="{Binding IconBrush}" 
                                           HorizontalAlignment="Center" VerticalAlignment="Center" 
                                           FontSize="10" FontWeight="Bold"/>
                            </Border>

                            <!-- Name -->
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="{Binding Name}" Foreground="{StaticResource TextPrimaryBrush}" FontSize="13" TextTrimming="CharacterEllipsis"/>
                                <TextBlock Text="{Binding RelativePath}" Visibility="{Binding ShowPath}" Foreground="{StaticResource TextMutedBrush}" FontSize="11"/>
                            </StackPanel>

                            <!-- Size -->
                            <TextBlock Grid.Column="2" Text="{Binding SizeDisplay}" Foreground="{StaticResource TextSecondaryBrush}" FontSize="12" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,16,0"/>

                            <!-- Date -->
                            <TextBlock Grid.Column="3" Text="{Binding ModifiedDisplay}" Foreground="{StaticResource TextMutedBrush}" FontSize="12" VerticalAlignment="Center"/>
                            
                            <!-- Quick Actions -->
                            <Button Grid.Column="4" Content="ðŸ”—" 
                                    Command="{Binding DataContext.CreateShareLinkCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}"
                                    Style="{StaticResource SecondaryButtonStyle}" 
                                    Width="24" Height="24" Padding="0" FontSize="10"
                                    Visibility="{Binding IsDirectory, Converter={StaticResource InverseBoolToVis}}"
                                    ToolTip="Create Share Link"/>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <!-- Empty State -->
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" 
                        Visibility="{Binding IsEmpty, Converter={StaticResource BoolToVis}}">
                <TextBlock Text="ðŸ“‚" FontSize="48" HorizontalAlignment="Center" Opacity="0.5" Foreground="{StaticResource TextMutedBrush}"/>
                <TextBlock Text="{Binding EmptyStateMessage}" Foreground="{StaticResource TextMutedBrush}" FontSize="16" Margin="0,16,0,0" HorizontalAlignment="Center"/>
                <Button Content="Go Up" Command="{Binding NavigateUpCommand}" Margin="0,16,0,0" 
                        Style="{StaticResource SecondaryButtonStyle}" HorizontalAlignment="Center"
                        Visibility="{Binding CanNavigateUp, Converter={StaticResource BoolToVis}}"/>
            </StackPanel>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="{StaticResource BackgroundDarkBrush}" BorderBrush="#30FFFFFF" BorderThickness="0,1,0,0" Padding="12,4">
            <Grid>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{Binding StatusText}" Foreground="{StaticResource TextMutedBrush}" FontSize="11"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock Text="Total Size: " Foreground="{StaticResource TextMutedBrush}" FontSize="11"/>
                    <TextBlock Text="{Binding TotalSizeText}" Foreground="{StaticResource TextPrimaryBrush}" FontSize="11"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
