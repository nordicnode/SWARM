<UserControl x:Class="Swarm.UI.Views.OverviewView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Swarm.UI.Views"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="24">
        <StackPanel>
            
            <!-- Header -->
            <TextBlock Text="Overview" FontSize="24" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,24"/>

            <!-- Stats Cards Row -->
            <Grid Margin="0,0,0,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Files Synced Card -->
                <Border Grid.Column="0" Background="#10ffffff" CornerRadius="12" Padding="20">
                    <StackPanel>
                        <TextBlock Text="Files Synced" Foreground="{StaticResource TextSecondaryBrush}" FontSize="12" Margin="0,0,0,8"/>
                        <TextBlock Text="{Binding FilesSynced}" FontSize="28" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}"/>
                        <TextBlock Text="Total files tracked" Foreground="{StaticResource TextMutedBrush}" FontSize="11" Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>
                
                <!-- Data Transferred Card -->
                <Border Grid.Column="2" Background="#10ffffff" CornerRadius="12" Padding="20">
                    <StackPanel>
                        <TextBlock Text="Data Transferred" Foreground="{StaticResource TextSecondaryBrush}" FontSize="12" Margin="0,0,0,8"/>
                        <TextBlock Text="{Binding DataTransferred}" FontSize="28" FontWeight="Bold" Foreground="{StaticResource AccentPrimaryBrush}"/>
                        <TextBlock Text="This session" Foreground="{StaticResource TextMutedBrush}" FontSize="11" Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>
                
                <!-- Connected Peers Card -->
                <Border Grid.Column="4" Background="#10ffffff" CornerRadius="12" Padding="20">
                    <StackPanel>
                        <TextBlock Text="Connected Peers" Foreground="{StaticResource TextSecondaryBrush}" FontSize="12" Margin="0,0,0,8"/>
                        <TextBlock Text="{Binding ConnectedPeers}" FontSize="28" FontWeight="Bold" Foreground="{StaticResource StatusOnlineBrush}"/>
                        <TextBlock Text="{Binding PeerStatus}" Foreground="{StaticResource TextMutedBrush}" FontSize="11" Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>
                
                <!-- Sync Health Card -->
                <Border Grid.Column="6" Background="#10ffffff" CornerRadius="12" Padding="20">
                    <StackPanel>
                        <TextBlock Text="Sync Health" Foreground="{StaticResource TextSecondaryBrush}" FontSize="12" Margin="0,0,0,8"/>
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="12" Height="12" Fill="{Binding HealthColor}" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock Text="{Binding HealthText}" FontSize="22" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}"/>
                        </StackPanel>
                        <TextBlock Text="{Binding LastSyncText}" Foreground="{StaticResource TextMutedBrush}" FontSize="11" Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>
            
            <!-- Recent Activity Section -->
            <Border Background="#08ffffff" CornerRadius="12" Padding="20" Margin="0,0,0,24">
                <StackPanel>
                    <Grid Margin="0,0,0,16">
                        <TextBlock Text="Recent Activity" FontSize="16" FontWeight="SemiBold" 
                                   Foreground="{StaticResource TextPrimaryBrush}"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button Content="Clear" Command="{Binding ClearRecentActivityCommand}" Style="{StaticResource SecondaryButtonStyle}" 
                                    Padding="12,6" FontSize="11" Margin="0,0,8,0"/>
                            <Button Content="Refresh" Command="{Binding RefreshCommand}" Style="{StaticResource SecondaryButtonStyle}" 
                                    Padding="12,6" FontSize="11"/>
                        </StackPanel>
                    </Grid>
                    
                    <ListBox ItemsSource="{Binding RecentActivity}" 
                             Background="Transparent" BorderThickness="0"
                             MaxHeight="250"
                             ItemContainerStyle="{StaticResource PeerListBoxItemStyle}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="4,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/> <!-- Icon -->
                                        <ColumnDefinition Width="*"/>    <!-- Message + Source -->
                                        <ColumnDefinition Width="Auto"/> <!-- Time -->
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- Activity Icon -->
                                    <TextBlock Text="{Binding Icon}" FontSize="16" VerticalAlignment="Center" 
                                               Margin="0,0,12,0" Width="24" TextAlignment="Center"/>
                                    
                                    <!-- Message and Source -->
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Message}" 
                                                   Foreground="{StaticResource TextPrimaryBrush}" 
                                                   FontSize="13" TextTrimming="CharacterEllipsis"
                                                   ToolTip="{Binding Message}"/>
                                        <TextBlock Foreground="{StaticResource TextMutedBrush}" FontSize="11" Margin="0,2,0,0">
                                            <Run Text="by"/>
                                            <Run Text="{Binding Source}" FontWeight="Medium"/>
                                        </TextBlock>
                                    </StackPanel>
                                    
                                    <!-- Time -->
                                    <TextBlock Grid.Column="2" Text="{Binding TimeAgo}" 
                                               Foreground="{StaticResource TextMutedBrush}" 
                                               FontSize="11" VerticalAlignment="Center" Margin="12,0,0,0"/>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    
                    <!-- Empty State could be handled by visibility binding but keeping simple for now -->
                </StackPanel>
            </Border>
            
            <!-- Storage Overview -->
            <Border Background="#08ffffff" CornerRadius="12" Padding="20">
                <StackPanel>
                    <TextBlock Text="Storage Overview" FontSize="16" FontWeight="SemiBold" 
                               Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,16"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Sync Folder Size -->
                        <StackPanel Margin="0,0,12,0">
                            <TextBlock Text="Sync Folder" Foreground="{StaticResource TextSecondaryBrush}" FontSize="12"/>
                            <TextBlock Text="{Binding SyncFolderSize}" 
                                       FontSize="20" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}" Margin="0,4,0,0"/>
                            <TextBlock Text="{Binding SyncFolderPath}" 
                                       Foreground="{StaticResource TextMutedBrush}" FontSize="11" 
                                       TextTrimming="CharacterEllipsis" Margin="0,4,0,0" ToolTip="{Binding SyncFolderPath}"/>
                        </StackPanel>
                        
                        <!-- Version Storage -->
                        <StackPanel Grid.Column="1" Margin="12,0,0,0">
                            <TextBlock Text="Version Backups" Foreground="{StaticResource TextSecondaryBrush}" FontSize="12"/>
                            <TextBlock Text="{Binding VersionStorageSize}" 
                                       FontSize="20" FontWeight="Bold" Foreground="{StaticResource AccentSecondaryBrush}" Margin="0,4,0,0"/>
                            <TextBlock Text="{Binding VersionCountText}" 
                                       Foreground="{StaticResource TextMutedBrush}" FontSize="11" Margin="0,4,0,0"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>
            
        </StackPanel>
    </ScrollViewer>
</UserControl>
