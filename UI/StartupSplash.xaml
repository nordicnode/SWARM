<Window x:Class="Swarm.UI.StartupSplash"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Loading..." 
        Height="280" Width="400"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Topmost="True">
    
    <Border Background="#1a1a1d" CornerRadius="16" BorderBrush="#2dd4bf" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Logo and Title -->
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <!-- App Icon -->
                <Border Width="64" Height="64" CornerRadius="16" Background="#2dd4bf" Margin="0,0,0,20">
                    <Path Data="M12 2L4.5 20.29l.71.71L12 18l6.79 3 .71-.71L12 2z" 
                          Width="32" Height="32" Stretch="Uniform" 
                          Fill="#1a1a1d" 
                          HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
                
                <TextBlock Text="SWARM" FontSize="32" FontWeight="Bold" Foreground="#fafafa" HorizontalAlignment="Center"/>
                <TextBlock Text="Peer-to-Peer File Sync" FontSize="14" Foreground="#a1a1aa" HorizontalAlignment="Center" Margin="0,4,0,0"/>
            </StackPanel>
            
            <!-- Loading Indicator -->
            <StackPanel Grid.Row="1" Margin="0,0,0,24">
                <ProgressBar IsIndeterminate="True" Height="3" Background="#27272a" Foreground="#2dd4bf" Margin="40,0"/>
                <TextBlock x:Name="StatusText" Text="Starting up..." FontSize="12" Foreground="#71717a" 
                           HorizontalAlignment="Center" Margin="0,12,0,0"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
