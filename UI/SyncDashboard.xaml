<Window x:Class="Swarm.UI.SyncDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sync Dashboard" 
        Height="600" Width="900"
        MinHeight="450" MinWidth="700"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">
    
    <Border Background="{StaticResource BackgroundDarkBrush}" 
            CornerRadius="12" 
            BorderBrush="#30FFFFFF" 
            BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="48"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- ========== TITLE BAR ========== -->
            <Border Grid.Row="0" Background="{StaticResource BackgroundMediumBrush}" 
                    CornerRadius="12,12,0,0" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="16,0">
                        <!-- Dashboard Icon -->
                        <Path Data="M3 13h8V3H3v10zm0 8h8v-6H3v6zm10 0h8V11h-8v10zm0-18v6h8V3h-8z" 
                              Width="18" Height="18" Stretch="Uniform" 
                              Fill="{StaticResource AccentPrimaryBrush}" VerticalAlignment="Center"/>
                        <TextBlock Text="Sync Dashboard" FontWeight="Bold" FontSize="16" 
                                   Foreground="{StaticResource TextPrimaryBrush}" 
                                   VerticalAlignment="Center" Margin="12,0,0,0"/>
                    </StackPanel>

                    <!-- Close Button -->
                    <Button Content="âœ•" Width="40" Height="32" 
                            HorizontalAlignment="Right" Margin="0,0,8,0"
                            Foreground="#F85149"
                            Background="Transparent" BorderThickness="0"
                            Padding="0" Cursor="Hand"
                            Click="CloseButton_Click"
                            AutomationProperties.Name="Close Dashboard"/>
                </Grid>
            </Border>

            <!-- ========== CONTENT ========== -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="24">
                <StackPanel>
                    
                    <!-- Stats Cards Row -->
                    <Grid Margin="0,0,0,24">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="16"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="16"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="16"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Files Synced Card -->
                        <Border Grid.Column="0" Background="#10ffffff" CornerRadius="12" Padding="20">
                            <StackPanel>
                                <TextBlock Text="Files Synced" Foreground="{StaticResource TextSecondaryBrush}" FontSize="12" Margin="0,0,0,8"/>
                                <TextBlock x:Name="FilesSyncedText" Text="0" FontSize="28" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}"/>
                                <TextBlock Text="Total files tracked" Foreground="{StaticResource TextMutedBrush}" FontSize="11" Margin="0,4,0,0"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Data Transferred Card -->
                        <Border Grid.Column="2" Background="#10ffffff" CornerRadius="12" Padding="20">
                            <StackPanel>
                                <TextBlock Text="Data Transferred" Foreground="{StaticResource TextSecondaryBrush}" FontSize="12" Margin="0,0,0,8"/>
                                <TextBlock x:Name="DataTransferredText" Text="0 B" FontSize="28" FontWeight="Bold" Foreground="{StaticResource AccentPrimaryBrush}"/>
                                <TextBlock Text="This session" Foreground="{StaticResource TextMutedBrush}" FontSize="11" Margin="0,4,0,0"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Connected Peers Card -->
                        <Border Grid.Column="4" Background="#10ffffff" CornerRadius="12" Padding="20">
                            <StackPanel>
                                <TextBlock Text="Connected Peers" Foreground="{StaticResource TextSecondaryBrush}" FontSize="12" Margin="0,0,0,8"/>
                                <TextBlock x:Name="ConnectedPeersText" Text="0" FontSize="28" FontWeight="Bold" Foreground="{StaticResource StatusOnlineBrush}"/>
                                <TextBlock x:Name="PeerStatusText" Text="No peers connected" Foreground="{StaticResource TextMutedBrush}" FontSize="11" Margin="0,4,0,0"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Sync Health Card -->
                        <Border Grid.Column="6" Background="#10ffffff" CornerRadius="12" Padding="20">
                            <StackPanel>
                                <TextBlock Text="Sync Health" Foreground="{StaticResource TextSecondaryBrush}" FontSize="12" Margin="0,0,0,8"/>
                                <StackPanel Orientation="Horizontal">
                                    <Ellipse x:Name="HealthIndicator" Width="12" Height="12" Fill="{StaticResource StatusOnlineBrush}" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <TextBlock x:Name="HealthText" Text="Healthy" FontSize="22" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}"/>
                                </StackPanel>
                                <TextBlock x:Name="LastSyncText" Text="Last sync: Never" Foreground="{StaticResource TextMutedBrush}" FontSize="11" Margin="0,4,0,0"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                    
                    <!-- Recent Activity Section -->
                    <Border Background="#08ffffff" CornerRadius="12" Padding="20" Margin="0,0,0,24">
                        <StackPanel>
                            <Grid Margin="0,0,0,16">
                                <TextBlock Text="Recent Activity" FontSize="16" FontWeight="SemiBold" 
                                           Foreground="{StaticResource TextPrimaryBrush}"/>
                                <Button Content="View All" Style="{StaticResource SecondaryButtonStyle}" 
                                        Padding="12,6" FontSize="11" HorizontalAlignment="Right"
                                        Click="ViewAllActivity_Click"/>
                            </Grid>
                            
                            <ListBox x:Name="RecentActivityList" 
                                     Background="Transparent" BorderThickness="0"
                                     MaxHeight="250"
                                     ItemContainerStyle="{StaticResource PeerListBoxItemStyle}">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="4,6">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <!-- Activity Icon -->
                                            <Ellipse Width="8" Height="8" VerticalAlignment="Center" Margin="0,0,12,0">
                                                <Ellipse.Style>
                                                    <Style TargetType="Ellipse">
                                                        <Setter Property="Fill" Value="{StaticResource TextMutedBrush}"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Type}" Value="FileSync">
                                                                <Setter Property="Fill" Value="{StaticResource AccentPrimaryBrush}"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Type}" Value="Conflict">
                                                                <Setter Property="Fill" Value="#F59E0B"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Type}" Value="Error">
                                                                <Setter Property="Fill" Value="{StaticResource StatusErrorBrush}"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Ellipse.Style>
                                            </Ellipse>
                                            
                                            <!-- Message -->
                                            <TextBlock Grid.Column="1" Text="{Binding Message}" 
                                                       Foreground="{StaticResource TextPrimaryBrush}" 
                                                       FontSize="13" VerticalAlignment="Center"
                                                       TextTrimming="CharacterEllipsis"
                                                       ToolTip="{Binding Message}"/>
                                            
                                            <!-- Time -->
                                            <TextBlock Grid.Column="2" Text="{Binding TimeAgo}" 
                                                       Foreground="{StaticResource TextMutedBrush}" 
                                                       FontSize="11" VerticalAlignment="Center" Margin="12,0,0,0"/>
                                        </Grid>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                            
                            <!-- Empty State -->
                            <TextBlock x:Name="NoActivityText" Text="No recent activity" 
                                       Foreground="{StaticResource TextMutedBrush}" 
                                       FontSize="13" HorizontalAlignment="Center" Margin="0,20"
                                       Visibility="Collapsed"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Storage Overview -->
                    <Border Background="#08ffffff" CornerRadius="12" Padding="20">
                        <StackPanel>
                            <TextBlock Text="Storage Overview" FontSize="16" FontWeight="SemiBold" 
                                       Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,16"/>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <!-- Sync Folder Size -->
                                <StackPanel Margin="0,0,12,0">
                                    <TextBlock Text="Sync Folder" Foreground="{StaticResource TextSecondaryBrush}" FontSize="12"/>
                                    <TextBlock x:Name="SyncFolderSizeText" Text="Calculating..." 
                                               FontSize="20" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}" Margin="0,4,0,0"/>
                                    <TextBlock x:Name="SyncFolderPathText" Text="" 
                                               Foreground="{StaticResource TextMutedBrush}" FontSize="11" 
                                               TextTrimming="CharacterEllipsis" Margin="0,4,0,0"/>
                                </StackPanel>
                                
                                <!-- Version Storage -->
                                <StackPanel Grid.Column="1" Margin="12,0,0,0">
                                    <TextBlock Text="Version Backups" Foreground="{StaticResource TextSecondaryBrush}" FontSize="12"/>
                                    <TextBlock x:Name="VersionStorageText" Text="Calculating..." 
                                               FontSize="20" FontWeight="Bold" Foreground="{StaticResource AccentSecondaryBrush}" Margin="0,4,0,0"/>
                                    <TextBlock x:Name="VersionCountText" Text="" 
                                               Foreground="{StaticResource TextMutedBrush}" FontSize="11" Margin="0,4,0,0"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>
                    
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Border>
</Window>
