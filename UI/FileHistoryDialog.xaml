<Window x:Class="Swarm.UI.FileHistoryDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="File Version History" 
        Height="600" Width="900"
        MinHeight="500" MinWidth="700"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterOwner">

    <Border Background="{StaticResource BackgroundDarkBrush}" 
            CornerRadius="12" 
            BorderBrush="#30FFFFFF" 
            BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="48"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- ========== TITLE BAR ========== -->
            <Border Grid.Row="0" Background="{StaticResource BackgroundMediumBrush}" 
                    CornerRadius="12,12,0,0" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="16,0">
                        <Path Data="M13,3c-4.97,0-9,4.03-9,9H1l3.89,3.89l0.07,0.14L9,12H6c0-3.87,3.13-7,7-7s7,3.13,7,7s-3.13,7-7,7c-1.93,0-3.68-0.79-4.94-2.06l-1.42,1.42C8.27,19.99,10.51,21,13,21c4.97,0,9-4.03,9-9S17.97,3,13,3z M12,8v5l4.28,2.54l0.72-1.21l-3.5-2.08V8H12z"
                              Width="20" Height="20" 
                              Stretch="Uniform"
                              Fill="{StaticResource AccentPrimaryBrush}"
                              VerticalAlignment="Center"/>
                        <TextBlock Text="File Version History" FontWeight="Bold" FontSize="16" 
                                   Foreground="{StaticResource TextPrimaryBrush}" 
                                   VerticalAlignment="Center" Margin="12,0,0,0"/>
                    </StackPanel>

                    <!-- Close Button -->
                    <Button Content="✕" Width="40" Height="32" 
                            HorizontalAlignment="Right" Margin="0,0,8,0"
                            Foreground="#F85149"
                            Background="Transparent" BorderThickness="0"
                            Padding="0" Cursor="Hand"
                            Click="CloseButton_Click"/>
                </Grid>
            </Border>

            <!-- ========== CONTENT ========== -->
            <Grid Grid.Row="1" Margin="12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300" MinWidth="200"/>
                    <ColumnDefinition Width="12"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left Panel: File List -->
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBox x:Name="SearchBox" 
                             Style="{StaticResource SettingsTextBoxStyle}"
                             Margin="0,0,0,12"
                             TextChanged="SearchBox_TextChanged"
                             Tag="Search files..."/>

                    <Border Grid.Row="1" Style="{StaticResource CardBorderStyle}" Padding="0">
                        <ListBox x:Name="FilesListBox" 
                                 Background="Transparent" 
                                 BorderThickness="0"
                                 SelectionChanged="FilesListBox_SelectionChanged"
                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="8,6">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Path Data="M14,2H6C4.9,2,4,2.9,4,4v16c0,1.1,0.9,2,2,2h12c1.1,0,2-0.9,2-2V8L14,2z"
                                              Width="16" Height="16" 
                                              Fill="{StaticResource AccentPrimaryBrush}"
                                              VerticalAlignment="Center"/>
                                        <StackPanel Grid.Column="1" Margin="12,0,0,0">
                                            <TextBlock Text="{Binding RelativePath}" 
                                                       Foreground="{StaticResource TextPrimaryBrush}"
                                                       TextTrimming="CharacterEllipsis"/>
                                            <TextBlock Text="{Binding VersionCount, StringFormat='{}{0} versions'}" 
                                                       FontSize="11"
                                                       Foreground="{StaticResource TextSecondaryBrush}"/>
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Border>
                    
                    <Button Grid.Row="2" Content="Clear All Versions" 
                            Style="{StaticResource SecondaryButtonStyle}"
                            Foreground="#F85149"
                            Margin="0,12,0,0"
                            Click="ClearAllButton_Click"/>
                </Grid>

                <!-- Right Panel: Version Details -->
                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Margin="0,0,0,12">
                        <TextBlock x:Name="SelectedFileTitle" 
                                   Text="Select a file to view versions" 
                                   FontSize="18" FontWeight="SemiBold"
                                   Foreground="{StaticResource TextPrimaryBrush}"
                                   TextTrimming="CharacterEllipsis"/>
                        <TextBlock x:Name="SelectedFilePath" 
                                   Text="" 
                                   FontSize="12"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   TextTrimming="CharacterEllipsis"/>
                    </StackPanel>

                    <Border Grid.Row="1" Style="{StaticResource CardBorderStyle}" Padding="0">
                        <ListBox x:Name="VersionsListBox" 
                                 Background="Transparent" 
                                 BorderThickness="0"
                                 HorizontalContentAlignment="Stretch"
                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="#20FFFFFF" BorderThickness="0,0,0,1" Padding="12">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel>
                                                <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                                    <TextBlock Text="{Binding Reason}" 
                                                               Foreground="{StaticResource AccentPrimaryBrush}"
                                                               FontWeight="SemiBold" Margin="0,0,8,0"/>
                                                    <TextBlock Text="{Binding CreatedAtDisplay}" 
                                                               Foreground="{StaticResource TextPrimaryBrush}"/>
                                                </StackPanel>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="{Binding FileSizeDisplay}" 
                                                               Foreground="{StaticResource TextSecondaryBrush}"
                                                               FontSize="12" Margin="0,0,12,0"/>
                                                    <TextBlock Text="{Binding SourcePeerId}" 
                                                               Foreground="{StaticResource TextMutedBrush}"
                                                               FontSize="12"/>
                                                </StackPanel>
                                            </StackPanel>

                                            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                                <Button Content="Show" 
                                                        Style="{StaticResource SecondaryButtonStyle}"
                                                        Padding="12,6" Margin="0,0,8,0"
                                                        Tag="{Binding}"
                                                        Click="ShowVersion_Click"/>
                                                <Button Content="Restore" 
                                                        Style="{StaticResource PrimaryButtonStyle}"
                                                        Padding="12,6" Margin="0,0,8,0"
                                                        Tag="{Binding}"
                                                        Click="RestoreVersion_Click"/>
                                                <Button Content="✕" 
                                                        Style="{StaticResource SecondaryButtonStyle}"
                                                        Foreground="#F85149"
                                                        Padding="8,6"
                                                        Tag="{Binding}"
                                                        Click="DeleteVersion_Click"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Border>
                    
                    <TextBlock x:Name="EmptyVersionsText" Grid.Row="1"
                               Text="No versions found"
                               Foreground="{StaticResource TextMutedBrush}"
                               VerticalAlignment="Center" HorizontalAlignment="Center"
                               Visibility="Collapsed"/>
                </Grid>
            </Grid>

            <!-- ========== FOOTER ========== -->
            <Border Grid.Row="2" Background="{StaticResource BackgroundMediumBrush}" 
                    CornerRadius="0,0,12,12" Padding="16">
                <Grid>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                        <Button Content="Open Versions Folder" 
                                Style="{StaticResource SecondaryButtonStyle}"
                                Click="OpenFolderButton_Click"/>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Close" 
                                Style="{StaticResource SecondaryButtonStyle}"
                                Padding="24,8"
                                Click="CloseButton_Click"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
